    {
      "name": "Main API",
      "item": [
        {
          "name": "Create Requisition",
          "request": {
            "method": "POST",
            "header": [
              { "key": "x-api-key", "value": "{{apiKey}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Software Engineer\",\n  \"description\": \"We are seeking an experienced Senior Software Engineer to join our growing team. The ideal candidate will have strong experience in cloud technologies and distributed systems.\",\n  \"department\": \"Engineering\",\n  \"location\": \"Remote - US\",\n  \"employmentType\": \"Full-time\",\n  \"salary\": {\n    \"min\": 120000,\n    \"max\": 180000,\n    \"currency\": \"USD\"\n  },\n  \"requirements\": [\n    \"8+ years of software development experience\",\n    \"Strong experience with AWS or similar cloud platforms\",\n    \"Expertise in Node.js/TypeScript\",\n    \"Experience with serverless architectures\"\n  ],\n  \"benefits\": [\n    \"Competitive salary\",\n    \"Health insurance\",\n    \"401(k) matching\",\n    \"Unlimited PTO\"\n  ],\n  \"status\": \"Open\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{apiEndpoint}}/api/requisitions",
              "host": ["{{apiEndpoint}}"],
              "path": ["api", "requisitions"]
            }
          }
        },
        {
          "name": "Update Requisition",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "x-api-key", "value": "{{apiKey}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Software Engineer - Cloud Platform\",\n  \"description\": \"Updated: We are seeking an experienced Senior Software Engineer to lead our cloud platform initiatives. The ideal candidate will have strong experience in cloud technologies and distributed systems.\",\n  \"department\": \"Engineering\",\n  \"location\": \"Remote - US\",\n  \"employmentType\": \"Full-time\",\n  \"salary\": {\n    \"min\": 130000,\n    \"max\": 190000,\n    \"currency\": \"USD\"\n  },\n  \"status\": \"Open\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{apiEndpoint}}/api/requisitions/{{requisitionId}}",
              "host": ["{{apiEndpoint}}"],
              "path": ["api", "requisitions", "{{requisitionId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Requisition Status Webhook",
          "request": {
            "method": "POST",
            "header": [
              { "key": "x-api-key", "value": "{{apiKey}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"requisition\",\n  \"entityId\": \"{{requisitionId}}\",\n  \"action\": \"status_updated\",\n  \"data\": {\n    \"status\": \"approved\"\n  }\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{apiEndpoint}}/api/webhooks/requisition-status",
              "host": ["{{apiEndpoint}}"],
              "path": ["api", "webhooks", "requisition-status"]
            }
          }
        },
        {
          "name": "Candidate Status Webhook",
          "request": {
            "method": "POST",
            "header": [
              { "key": "x-api-key", "value": "{{apiKey}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"candidate\",\n  \"entityId\": \"{{candidateId}}\",\n  \"action\": \"status_updated\",\n  \"data\": {\n    \"status\": \"hired\",\n    \"requisitionId\": \"{{requisitionId}}\"\n  }\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{apiEndpoint}}/api/webhooks/candidate-status",
              "host": ["{{apiEndpoint}}"],
              "path": ["api", "webhooks", "candidate-status"]
            }
          }
        }
      ]
    }
